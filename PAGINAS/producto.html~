<script>


var colonia;  
  
function startyr(){


colonia=document.getElementById("Colonia");

document.DATA.addEventListener("invalid",failx,true);

document.getElementById("enviar").addEventListener("click",enviar,false);

document.DATA.addEventListener("input",Tiemporeal,false);

}



function failx(e) {
	var elemento=e.target;
	elemento.style.background="yellow";
}

function enviar() {

var mensaje=document.getElementById("enviar");
	
var correcto=document.DATA.checkValidity();	
	
	if (correcto==true) {
		
		document.DATA.submit();
	}	

else if (mensaje.validity.valueMissing==true || mensaje.validity.patternMismatch==true){
	alert("INGRESE SU RESIDENCIA ");
}


}

function Tiemporeal(e){

var elemento=e.target;

if(elemento.validity.valid==true){

elemento.style.background="#FFFFFF";

}

else {

 elemento.style.background="yellow";

}

}

window.addEventListener("load",startyr,false);



</script>
